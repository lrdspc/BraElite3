{
  "name": "Brasilit Vistorias Técnicas",
  "short_name": "Brasilit",
  "description": "Sistema de Vistorias Técnicas da Brasilit - Saint-Gobain",
  "start_url": "/?source=pwa",
  "id": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "background_color": "#ffffff",
  "theme_color": "#EE1B24",
  "orientation": "any",
  "scope": "/",
  "categories": ["business", "productivity", "utilities"],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "icons": [
    {
      "src": "icons/icon-16.png",
      "sizes": "16x16",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-32.png",
      "sizes": "32x32",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-48.png",
      "sizes": "48x48",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-64.png",
      "sizes": "64x64",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "brasilit-icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "brasilit-icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "brasilit-icon-192-maskable.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "brasilit-icon-512-maskable.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "screenshot-narrow.jpg",
      "sizes": "540x1200",
      "type": "image/jpeg",
      "form_factor": "narrow"
    },
    {
      "src": "screenshot-wide.jpg",
      "sizes": "1200x800",
      "type": "image/jpeg",
      "form_factor": "wide"
    }
  ],  "shortcuts": [
    {
      "name": "Nova Vistoria",
      "short_name": "Nova Vistoria",
      "description": "Iniciar uma nova vistoria técnica",
      "url": "/inspection/new?source=shortcut",
      "icons": [{ "src": "/shortcut-inspection.svg", "sizes": "192x192", "type": "image/svg+xml" }]
    },
    {
      "name": "Minhas Vistorias",
      "short_name": "Vistorias",
      "description": "Ver minhas vistorias em andamento e finalizadas",
      "url": "/inspections?source=shortcut",
      "icons": [{ "src": "/shortcut-list.svg", "sizes": "192x192", "type": "image/svg+xml" }]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Visualizar dashboard de vistorias",
      "url": "/?source=shortcut",
      "icons": [{ "src": "/shortcut-dashboard.svg", "sizes": "192x192", "type": "image/svg+xml" }]
    }
  ],
  "lang": "pt-BR",
  "dir": "ltr",
  "prefer_related_applications": false,
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "web+brasilit",
      "url": "/?source=protocol&url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/open-inspection",
      "accept": {
        "application/brasilit-inspection": [".brinsp"]
      }
    }
  ],
  "widgets": [
    {
      "name": "brasilit-dashboard",
      "description": "Mostra estatísticas de vistorias técnicas",
      "tag": "dashboard",
      "template": "widgets/dashboard.html",
      "data": "/api/widget-data",
      "type": "application/json",
      "update": {
        "frequency": "periodic",
        "period": 900
      }
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        },
        {
          "name": "documents",
          "accept": ["application/pdf", ".pdf"]
        }
      ]
    }
  }
}
